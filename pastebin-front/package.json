{
    "name": "pastebin-front",
    "version": "0.4.0",
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "run-p fmt-check lint type-check build-only",
        "preview": "vite preview",
        "build-only": "vite build",
        "type-check": "vue-tsc --noEmit",
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
        "fmt": "prettier --write src/ *.ts *.cjs *.json *.html",
        "fmt-check": "prettier --check src/ *.ts *.cjs *.json *.html"
    },
    "dependencies": {
        "@icon-park/vue-next": "^1.4.2",
        "copy-to-clipboard": "^3.3.3",
        "katex": "^0.16.10",
        "mande": "^2.0.7",
        "markdown-it": "^14.1.0",
        "pinia": "^2.1.6",
        "prismjs": "^1.29.0",
        "qrcode": "^1.5.3",
        "vite-plugin-prismjs": "^0.0.8",
        "vue": "^3.4.3",
        "vue-router": "^4.4.0"
    },
    "devDependencies": {
        "@rushstack/eslint-patch": "^1.10.1",
        "@types/katex": "^0.16.2",
        "@types/markdown-it": "^14.1.1",
        "@types/node": "^18.19.1",
        "@types/prismjs": "^1.26.0",
        "@types/qrcode": "^1.5.1",
        "@vitejs/plugin-vue": "^5.0.2",
        "@vitejs/plugin-vue-jsx": "^4.0.0",
        "@vue/eslint-config-prettier": "^9.0.0",
        "@vue/eslint-config-typescript": "^13.0.0",
        "@vue/tsconfig": "^0.1.3",
        "eslint": "^9.6.0",
        "eslint-plugin-vue": "^9.26.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.3.2",
        "typescript": "~4.9.5",
        "vite": "^5.3.2",
        "vue-tsc": "^2.0.1"
    }
}
