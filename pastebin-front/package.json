{
    "name": "pastebin-front",
    "version": "0.4.0",
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "run-p fmt-check lint type-check build-only",
        "preview": "vite preview",
        "build-only": "vite build",
        "type-check": "vue-tsc --noEmit",
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
        "fmt": "prettier --write src/ *.ts *.cjs *.json *.html",
        "fmt-check": "prettier --check src/ *.ts *.cjs *.json *.html"
    },
    "dependencies": {
        "@icon-park/vue-next": "^1.4.2",
        "copy-to-clipboard": "^3.3.3",
        "katex": "^0.16.6",
        "mande": "^2.0.6",
        "markdown-it": "^13.0.1",
        "pinia": "^2.1.3",
        "prismjs": "^1.29.0",
        "qrcode": "^1.5.1",
        "vite-plugin-prismjs": "^0.0.8",
        "vue": "^3.3.2",
        "vue-router": "^4.2.0"
    },
    "devDependencies": {
        "@rushstack/eslint-patch": "^1.3.0",
        "@types/katex": "^0.16.0",
        "@types/markdown-it": "^12.2.3",
        "@types/node": "^18.16.3",
        "@types/prismjs": "^1.26.0",
        "@types/qrcode": "^1.5.0",
        "@vitejs/plugin-vue": "^4.2.1",
        "@vitejs/plugin-vue-jsx": "^3.0.1",
        "@vue/eslint-config-prettier": "^7.1.0",
        "@vue/eslint-config-typescript": "^11.0.2",
        "@vue/tsconfig": "^0.1.3",
        "eslint": "^8.44.0",
        "eslint-plugin-vue": "^9.15.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.8.7",
        "typescript": "~4.9.5",
        "vite": "^4.3.9",
        "vue-tsc": "^1.8.0"
    }
}
